{% comment %}
  Header Stats Component - 3 Categories
  Displays clickable stat boxes for all 3 injury types

  Parameters:
  - heading: Main heading text
  - description: Description text
{% endcomment %}

<header class="memorial-wall-header">
  <h1 class="memorial-wall-title">{{ heading }}</h1>
  <p class="memorial-wall-description">{{ description }}</p>

  <!-- Stats Container - 3 Categories -->
  <div class="memorial-stats-container memorial-stats-3-col">
    <!-- Lives Stolen -->
    <a href="#lives-stolen-section" class="memorial-stat-box memorial-stat-clickable">
      <div class="memorial-stat-number" id="lives-stolen-count">0</div>
      <h3 class="memorial-stat-label">Lives Stolen</h3>
      <p class="memorial-stat-subtitle">People killed by traffic violence</p>
    </a>

    <!-- Lives Shattered -->
    <a href="#lives-shattered-section" class="memorial-stat-box memorial-stat-clickable">
      <div class="memorial-stat-number" id="lives-shattered-count">0</div>
      <h3 class="memorial-stat-label">Lives Shattered</h3>
      <p class="memorial-stat-subtitle">People who survived but are wounded by a car</p>
    </a>

    <!-- Lives Forever Changed -->
    <a href="#lives-changed-section" class="memorial-stat-box memorial-stat-clickable">
      <div class="memorial-stat-number" id="lives-changed-count">0</div>
      <h3 class="memorial-stat-label">Lives Forever Changed</h3>
      <p class="memorial-stat-subtitle">People who carry the impact of traffic violence (family, friends, witnesses, first responders, etc.)</p>
    </a>
  </div>
</header>
