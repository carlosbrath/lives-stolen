{% comment %}
  Memorial Story Submission Form Block
  Embeds the story submission form on any page
{% endcomment %}

{% schema %}
{
  "name": "Story Submission Form",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Share Your Story"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Help us honor those we've lost by sharing their story with our community."
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f9f9f9"
    },
    {
      "type": "checkbox",
      "id": "show_full_page_link",
      "label": "Show link to full-page form",
      "default": true
    }
  ]
}
{% endschema %}

<div class="memorial-submission-section" style="background-color: {{ block.settings.background_color }};">
  <div class="memorial-submission-container">
    {% if block.settings.heading != blank %}
      <h2 class="memorial-submission-heading" style="color: {{ block.settings.heading_color }};">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <p class="memorial-submission-description">
        {{ block.settings.description }}
      </p>
    {% endif %}

    <div class="memorial-submission-embed">
      <iframe
        src="/apps/stories-app/submit-story?embed=form"
        width="100%"
        height="auto"
        style="min-height: 1000px; border: none; display: block;"
        frameborder="0"
        loading="lazy"
        title="Submit Your Story"
        id="memorial-submission-iframe"
      ></iframe>
    </div>

    <script>
      // Auto-resize iframe to fit content
      window.addEventListener('message', function(e) {
        if (e.data.type === 'resize-iframe') {
          const iframe = document.getElementById('memorial-submission-iframe');
          if (iframe) {
            iframe.style.height = e.data.height + 'px';
          }
        }
      });
    </script>

    {% if block.settings.show_full_page_link %}
      <div class="memorial-submission-actions">
        <a href="/apps/stories-app/submit-story" class="memorial-submission-link" target="_blank">
          Open form in new tab
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .memorial-submission-section {
    padding: 60px 20px;
  }

  .memorial-submission-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .memorial-submission-heading {
    font-size: 2.5rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 1rem;
  }

  .memorial-submission-description {
    font-size: 1.1rem;
    text-align: center;
    color: #666;
    margin-bottom: 3rem;
    line-height: 1.6;
  }

  .memorial-submission-embed {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .memorial-submission-embed iframe {
    display: block;
    width: 100%;
  }

  .memorial-submission-actions {
    text-align: center;
  }

  .memorial-submission-link {
    display: inline-block;
    color: #666;
    text-decoration: underline;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .memorial-submission-link:hover {
    color: #000;
  }

  @media (max-width: 768px) {
    .memorial-submission-heading {
      font-size: 2rem;
    }

    .memorial-submission-section {
      padding: 40px 15px;
    }

    .memorial-submission-embed {
      margin-bottom: 1.5rem;
    }
  }
</style>
