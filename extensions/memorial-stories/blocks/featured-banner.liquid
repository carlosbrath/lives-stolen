{% comment %}
  Memorial Stories Featured Banner Block
  A call-to-action banner for the memorial stories section
{% endcomment %}

{% schema %}
{
  "name": "Memorial Stories Banner",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Honor Their Memory"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Every story matters. Share a memory and help us remember those who have touched our lives."
    },
    {
      "type": "text",
      "id": "button_text_primary",
      "label": "Primary button text",
      "default": "Share a Story"
    },
    {
      "type": "text",
      "id": "button_text_secondary",
      "label": "Secondary button text",
      "default": "View All Stories"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "centered",
          "label": "Centered"
        },
        {
          "value": "split",
          "label": "Split (Text Left, Image Right)"
        }
      ],
      "default": "centered"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (optional)"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button text color",
      "default": "#000000"
    }
  ]
}
{% endschema %}

<div
  class="memorial-banner memorial-banner--{{ block.settings.layout }}"
  style="
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_image %}
      background-image: url('{{ block.settings.background_image | img_url: 'master' }}');
    {% endif %}
  "
>
  <div class="memorial-banner-overlay"></div>

  <div class="memorial-banner-container">
    <div class="memorial-banner-content">
      {% if block.settings.heading != blank %}
        <h2 class="memorial-banner-heading" style="color: {{ block.settings.heading_color }};">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <p class="memorial-banner-description" style="color: {{ block.settings.text_color }};">
          {{ block.settings.description }}
        </p>
      {% endif %}

      <div class="memorial-banner-buttons">
        {% if block.settings.button_text_primary != blank %}
          <a
            href="/apps/stories-app/submit-story"
            class="memorial-banner-button memorial-banner-button--primary"
            style="
              background-color: {{ block.settings.button_background }};
              color: {{ block.settings.button_text }};
            "
          >
            {{ block.settings.button_text_primary }}
          </a>
        {% endif %}

        {% if block.settings.button_text_secondary != blank %}
          <a
            href="/apps/stories-app/stories"
            class="memorial-banner-button memorial-banner-button--secondary"
            style="
              border-color: {{ block.settings.button_background }};
              color: {{ block.settings.button_background }};
            "
          >
            {{ block.settings.button_text_secondary }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if block.settings.layout == 'split' and block.settings.background_image %}
      <div class="memorial-banner-image">
        <img
          src="{{ block.settings.background_image | img_url: '800x800', crop: 'center' }}"
          alt="{{ block.settings.heading }}"
          loading="lazy"
        />
      </div>
    {% endif %}
  </div>
</div>

<style>
  .memorial-banner {
    position: relative;
    padding: 80px 20px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .memorial-banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }

  .memorial-banner-container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 60px;
  }

  .memorial-banner--centered .memorial-banner-container {
    flex-direction: column;
    text-align: center;
  }

  .memorial-banner--split .memorial-banner-container {
    flex-direction: row;
  }

  .memorial-banner-content {
    flex: 1;
  }

  .memorial-banner--centered .memorial-banner-content {
    max-width: 800px;
  }

  .memorial-banner-heading {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .memorial-banner-description {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  .memorial-banner-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .memorial-banner--centered .memorial-banner-buttons {
    justify-content: center;
  }

  .memorial-banner-button {
    display: inline-block;
    padding: 16px 40px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .memorial-banner-button--primary {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }

  .memorial-banner-button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }

  .memorial-banner-button--secondary {
    background-color: transparent !important;
  }

  .memorial-banner-button--secondary:hover {
    background-color: rgba(255, 255, 255, 0.1) !important;
  }

  .memorial-banner-image {
    flex: 1;
    max-width: 500px;
  }

  .memorial-banner-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 968px) {
    .memorial-banner--split .memorial-banner-container {
      flex-direction: column;
      text-align: center;
    }

    .memorial-banner--split .memorial-banner-buttons {
      justify-content: center;
    }

    .memorial-banner-heading {
      font-size: 2.5rem;
    }

    .memorial-banner {
      padding: 60px 20px;
    }
  }

  @media (max-width: 640px) {
    .memorial-banner-heading {
      font-size: 2rem;
    }

    .memorial-banner-description {
      font-size: 1.1rem;
    }

    .memorial-banner-buttons {
      flex-direction: column;
      width: 100%;
    }

    .memorial-banner-button {
      width: 100%;
      text-align: center;
    }
  }
</style>
