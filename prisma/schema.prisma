generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Submission {
  id                  String    @id @default(uuid())
  shop                String    @default("public")
  submitterName       String
  submitterEmail      String
  victimName          String?
  relation            String?
  age                 Int?
  gender              String?
  incidentDate        String
  state               String
  roadUserType        String
  injuryType          String
  shortTitle          String
  victimStory         String
  photoUrls           String?
  metaobjectId        String?
  status              String    @default("pending")
  adminNotes          String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  publishedAt         DateTime?
  interestedInContact Boolean?
  zipCode             String?

  @@index([createdAt])
  @@index([roadUserType])
  @@index([shop])
  @@index([state])
  @@index([status])
}
